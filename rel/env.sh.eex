export ERL_EPMD_ADDRESS=127.0.0.1
# Set number of open files (tcp sockets) to max
ulimit -n `ulimit -n -H`

# Set the oom_score_adj to 1000 to make the process more likely to be killed by the OOM killer instead of system processes
# Also to || true for systems that don't support oom_score_adj
echo 1000 2>/dev/null > /proc/self/oom_score_adj || true
